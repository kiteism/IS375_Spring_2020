<Window x:Class="HelloWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,119,0,0" Text="Hello, How are you doing?" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <RadioButton x:Name="doingwell" Content="I'm doing well" HorizontalAlignment="Left" Margin="289,178,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="notgood" Content="Not so good" HorizontalAlignment="Left" Margin="432,178,0,0" VerticalAlignment="Top"/>
        <Button Content="Say" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Click="Button_CLick"/>

    </Grid>
</Window>
